{
  "name": "lmn",
  "version": "1.0.2",
  "description": "",
  "main": "src/main.mjs",
  "scripts": {
    "boot": "node --experimental-modules src/main",
    "build": "rollup --config build/rollup.config.mjs",
    "lint": "eslint '{build,specs,src}/**/*.{js,mjs}'",
    "prettify": "prettier --write '{build,specs,src}/**/*.{js,mjs}'",
    "start": "nodemon --watch ./src --watch ./specs --exec 'npm run prettify --silent && npm run lint --silent && npm test --silent && npm run boot && npm run build || exit 1'",
    "test": "node --experimental-modules specs/main.spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slacktracer/lmn.git"
  },
  "author": "slacktracer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slacktracer/lmn/issues"
  },
  "homepage": "https://github.com/slacktracer/lmn#readme",
  "dependencies": {
    "parse5": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "nodemon": "^1.17.1",
    "prettier": "^1.11.1",
    "rollup": "^0.56.5",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-uglify": "^3.0.0"
  }
}
